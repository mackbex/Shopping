<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Shopping" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/grey_900</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/azure</item>
        <item name="colorSecondaryVariant">@color/soft_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/grey_200</item>
        <item name="android:textColorSecondary">@color/grey_500</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

</resources>